{
  "name": "doc-summary",
  "version": "1.0.0",
  "description": "Document summarization with configurable detail levels and key point extraction",
  "type": "api",
  "status": "stable",

  "source": {
    "type": "internal",
    "package": null,
    "repository": null,
    "command": null
  },

  "capabilities": [
    "analyze",
    "generate",
    "read"
  ],

  "requires": {
    "env": ["ANTHROPIC_API_KEY"],
    "python": ">=3.10"
  },

  "commands": {
    "verify": "python -c \"from tools.doc_summary import summarize; print('OK')\"",
    "test": "pytest tools/doc-summary/tests/ -v"
  },

  "workflows": [
    {
      "name": "brief-summary",
      "description": "Quick summary of document",
      "steps": [
        "summarize('content', summary_type='brief')"
      ]
    },
    {
      "name": "bullet-points",
      "description": "Key points as bullets",
      "steps": [
        "summarize('content', summary_type='bullets')"
      ]
    }
  ]
}
