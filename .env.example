# API Keys for MCP Servers and Applications
# Copy this file to .env and fill in your actual API keys

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-****

# OpenAI API Key
OPENAI_API_KEY=sk-****

# Notion API Key
# Get from: https://www.notion.so/my-integrations
NOTION_API_KEY=ntn_****
NOTION_INTEGRATION_NAME=My_Integration_****
NOTION_INTEGRATION_SECRET=secret_****

# Telegram Developer API
TELEGRAM_API_ID=12345****
TELEGRAM_API_HASH=abcd1234****
TELEGRAM_BOT_TOKEN=1234567890:****

# Telegram Account
TELEGRAM_PHONE=+1234567****
TELEGRAM_PASSWORD=your_password_****

# Browse AI
BROWSE_AI_API_KEY=****

# Extractor
EXTRACTOR_API_KEY=****

# Tavily
TAVILY_API_KEY=tvly-****


# Perplexity AI API (optional - for web search functionality)
PERPLEXITY_API_KEY=pplx-****

# Telegram Chat Filtering (optional - for multi-server deployments)

# Groups: Whitelist specific workspace names (comma-separated)
# Leave empty to handle NO groups, or specify workspace names to handle ONLY those groups
# Use workspace names from config/workspace_config.json
TELEGRAM_ALLOWED_GROUPS=PsyOPTIMAL,PsyOPTIMAL Dev,Tom's Team

# DMs: Allow all direct messages (true) or block all DMs (false)
# true = handle all private messages, false = ignore all private messages
TELEGRAM_ALLOW_DMS=true

# Example server configurations:
# Server 1 (PsyOPTIMAL only): TELEGRAM_ALLOWED_GROUPS=PsyOPTIMAL,PsyOPTIMAL Dev TELEGRAM_ALLOW_DMS=false
# Server 2 (DeckFusion only): TELEGRAM_ALLOWED_GROUPS=Tom's Team,DeckFusion Dev TELEGRAM_ALLOW_DMS=false
# Server 3 (DMs only): TELEGRAM_ALLOWED_GROUPS= TELEGRAM_ALLOW_DMS=true
